<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/AppNameTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"

        />

    <TextView
        android:id="@+id/AppSloganTextViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_slogan"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/UserIdTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_id_text"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_verified_user_24"
            android:layout_marginEnd="10dp"
            />
        <EditText
            android:id="@+id/UserIdEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="normal"
            android:hint="@string/user_id_hint"
            android:inputType="number"
            android:importantForAutofill="no"
            android:backgroundTint="#D0527D"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PasswordTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_text"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_lock_24"
            android:layout_marginEnd="10dp"
            />
        <EditText
            android:id="@+id/PasswordEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="normal"
            android:hint="@string/password__hint"
            android:inputType="numberPassword"
            android:importantForAutofill="no"
            android:backgroundTint="#D0527D"
            />



    </LinearLayout>

    <Button
        android:id="@+id/RegistrationButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/login_button_text"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_baseline_login_24"
        android:textColor="@color/white"
        android:background="@drawable/button_gradient"


        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MessageTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_message_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_baseline_no_encryption_24" />
        <Button
            android:id="@+id/ButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_button_text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/ic_baseline_how_to_reg_24"
            />



    </LinearLayout>


</LinearLayout>